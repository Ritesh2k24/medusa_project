FROM node:18

# Set working directory
WORKDIR /app

# Copy package.json and package-lock.json
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the code
COPY . .

# Expose the port Medusa uses (e.g., 9000)
EXPOSE 9000

# Start Medusa in production (adjust if you need 'medusa develop')
CMD ["npm", "run", "start"]
